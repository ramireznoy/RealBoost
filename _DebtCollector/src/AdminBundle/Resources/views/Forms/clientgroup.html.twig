<form class="form-horizontal" method="post">
    <div class="form-group">
        <label class="col-md-4 control-label" for="advisor">Asesor</label>
        <div class="col-md-6">
            <select id="group-selector" name="advisor" class="selectpicker" data-live-search="true" data-width="100%">
                {% for advisor in advisors %}
                    <option value="{{ advisor.id }}" {% if clientgroup is defined %}{% if clientgroup.advisor.id == advisor.id %}selected{% endif %}{% endif %}>{{ advisor.fullname }}</option>
                {% endfor %}
            </select>
            <span class="help-block"><small>La marca del auto</small></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label" for="name">Nombre</label>
        <div class="col-md-6">
            <input value="{% if clientgroup is defined %}{{ clientgroup.name }}{% endif %}"  name="name" placeholder="Nombre del grupo" class="form-control input-md" type="text">
            <span class="help-block"><small>El nombre del grupo de clientes</small></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label" for="address">Dirección</label>
        <div class="col-md-6">
            <input value="{% if clientgroup.address is defined %}{{ clientgroup.address }}{% endif %}" name="address" placeholder="Dirección postal" class="form-control input-md" type="text">
            <span class="help-block"><small>Dirección donde se reune el Grupo</small></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label" for="amount">Préstamo</label>
        <div class="col-md-6">
            <input value="{% if clientgroup.amount is defined %}{{ clientgroup.amount }}{% endif %}" name="amount" placeholder="Pago semanal" class="form-control input-md" type="text">
            <span class="help-block"><small>Préstamo asignado al Grupo</small></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label" for="payment">Pago semanal</label>
        <div class="col-md-6">
            <input value="{% if clientgroup.quota is defined %}{{ clientgroup.quota }}{% endif %}" name="payment" placeholder="Pago semanal" class="form-control input-md" type="text">
            <span class="help-block"><small>Pago semanal que debe cubrir el Grupo</small></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label" for="term">Plazo</label>
        <div class="col-md-6">
            <input value="{% if clientgroup.term is defined %}{{ clientgroup.term }}{% endif %}" name="term" placeholder="Plazo del crédito" class="form-control input-md" type="text">
            <span class="help-block"><small>Semanas para el pago del préstamo grupal</small></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label" for="reunion-date">Fechas de reunión</label>
        <div class="col-md-6">
            <div class="input-group">
                <input id="reunion-date" type="text" class="form-control">
                <span class="input-group-addon"><i class="demo-pli-calendar-4"></i></span>
            </div>
            <span class="help-block"><small>Fecha de reunión del grupo</small></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label" for="reunion-time">Hora de la reunión</label>
        <div class="col-md-6">
            <div class="input-group">
                <input id="reunion-time" class="form-control" type="text">
                <span class="input-group-addon"><i class="demo-pli-clock"></i></span>
            </div>
            <span class="help-block"><small>Hora de la reunión del grupo</small></span>
        </div>
    </div>
    <input value="" name="reunion" type="hidden">
    {% if clientgroup is defined %}
        <input value="{{ clientgroup.id }}" name="id" type="hidden">
    {% endif %}
</form>
<script>
    $(document).ready(function () {
        $('.selectpicker').selectpicker();
        $('#reunion-time').timepicker({autoclose:true});
        $('#reunion-date').datepicker({autoclose:true});
    });
</script>