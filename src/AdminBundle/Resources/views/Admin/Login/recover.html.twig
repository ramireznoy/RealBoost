{% extends 'AdminBundle:Admin:Login/login_base.html.twig' %}
{% block subtitle %}Recover{% endblock %}
{% block main_content %}
    <div class="cls-content-sm panel">
        <div class="panel-body">
            <div class="pad-ver">
                <i class="ion-ios-email-outline icon-3x"></i>
            </div>
            <p class="text-muted pad-btm">Enter your email address to recover your password</p>
            <form action="">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email">
                </div>
                <div class="form-group text-right">
                    <button class="btn btn-success btn-block" type="submit">Reset Password</button>
                </div>
            </form>
            <div class="pad-top">
                <a href="{{ path('admin_login') }}" class="btn-link mar-rgt text-primary">Back to Login</a>
            </div>
        </div>
    </div>
{% endblock %}