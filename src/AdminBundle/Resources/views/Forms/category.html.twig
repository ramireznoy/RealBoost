<form class="form-horizontal" method="post">
    <div class="form-group">
        <label class="col-md-4 control-label" for="name">Nombre</label>
        <div class="col-md-6">
            <input value="{% if category is defined %}{{ category.name }}{% endif %}" name="name" placeholder="Nombre del servicio" class="form-control input-md" type="text">
            <span class="help-block"><small>Nombre para la categoría</small></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label" for="enabled">Disponible</label>
        <div class="col-md-6">
            <div class="checkbox">
                <input value="{% if category is defined %}{% if category.enabled %}true{% else %}false{% endif %}{% endif %}" id="enabled" name="enabled" class="magic-checkbox" type="checkbox" {% if category is defined %}{% if category.enabled %}checked{% endif %}{% endif %}>
                <label for="enabled">Disponibilidad</label>
            </div>
            <span class="help-block"><small>La categoría ya está disponible</small></span>
        </div>
    </div>
    {% if category is defined %}
        <input value="{{ category.id }}" name="id" type="hidden">
    {% endif %}
</form>
<script>
    $(document).ready(function () {
        $('.magic-checkbox').click(function () {
            if ($(this).val() === 'true') {
                $(this).val('false');
            } else {
                $(this).val('true');
            }
        });
    });
</script>